/*---------------------- Media ----------------------*/
@media screen and (max-width:1024px) {
    body main{
    background-color: rgba(var(--Background),var(--alpha));
    border-radius: 1rem;
    width: 100%;
    padding: 5%;
    margin: 0 auto 0 auto;
    text-align:justify;
    }
    .git{
        width:80%;
        justify-self: center;
        background-color: rgba(0, 0, 0, 0);
    }
}

@media screen and (min-width:1024px) {
    *{
        box-sizing: inherit;
    }
    body main, body div{
        background-color: rgba(var(--Background), var(--alpha));
        border-radius: 1rem;
        width: 80%;
        padding: 0;
        padding-bottom: 1rem;
        margin: 1rem auto 1rem auto;
        text-align:justify;
    }
    body main{
        min-height: 70.85%;
    }
    .git{
        width:80%;
        justify-self: center;
        background-color: rgba(0, 0, 0, 0);
        filter: drop-shadow(10px 10px 10px #333);
    }
}



